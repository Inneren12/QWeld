{
  "name": "qweld-schema-validation",
  "version": "1.0.0",
  "description": "JSON Schema validation for QWeld question bank indexes",
  "private": true,
  "scripts": {
    "validate:root": "ajv validate -c ajv-formats -s schemas/welder_blueprint.schema.json -d '../../app-android/src/main/assets/questions/index.json' --spec=draft2020 --all-errors --strict=false",
    "validate:locales": "ajv validate -c ajv-formats -s schemas/welder_blueprint.schema.json -d '../../app-android/src/main/assets/questions/*/index.json' --spec=draft2020 --all-errors --strict=false",
    "validate:all": "npm run validate:root && npm run validate:locales"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1"
  }
}

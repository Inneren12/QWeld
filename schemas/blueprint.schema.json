{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exam blueprint schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "trade",
    "blueprintVersion",
    "totalQuestions",
    "blocks"
  ],
  "properties": {
    "trade": {
      "type": "string",
      "minLength": 1
    },
    "blueprintVersion": {
      "type": "string",
      "minLength": 1
    },
    "totalQuestions": {
      "type": "integer",
      "minimum": 1
    },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "code",
          "title",
          "tasks"
        ],
        "properties": {
          "code": {
            "type": "string",
            "pattern": "^[A-Z]$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "id",
                "title",
                "quota"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[A-Z]-[0-9]{1,2}$"
                },
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "quota": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}

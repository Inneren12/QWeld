{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QWeld Explanation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "id",
    "version",
    "policyVersion",
    "locale",
    "questionRef",
    "summary",
    "steps",
    "why_not"
  ],
  "properties": {
    "schema": {
      "const": "qweld.explanation.v1"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "policyVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "locale": {
      "type": "string",
      "enum": [
        "en",
        "ru"
      ]
    },
    "questionRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "taskId"
      ],
      "properties": {
        "taskId": {
          "type": "string",
          "pattern": "^[A-D]-\\d+$"
        }
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "text"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "why_not": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "choiceId",
          "text"
        ],
        "properties": {
          "choiceId": {
            "type": "string",
            "enum": [
              "A",
              "B",
              "C",
              "D"
            ]
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "publisher": {
            "type": "string",
            "minLength": 1
          },
          "section": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "media": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type"
        ],
        "anyOf": [
          { "required": ["value"] },
          { "required": ["uri"] }
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "minLength": 1
          },
          "caption": {
            "type": "string",
            "minLength": 1
          },
          "license": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "license",
              "source",
              "author"
            ],
            "properties": {
              "license": {
                "type": "string",
                "minLength": 1,
                "not": {
                  "enum": [
                    "unknown",
                    "unspecified",
                    "n/a",
                    "none"
                  ]
                }
              },
              "source": {
                "type": "string",
                "minLength": 1
              },
              "author": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "tips": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "editor": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
